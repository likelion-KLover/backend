{
  "index_patterns": ["tourpostjpn*"],
  "template": {
    "settings": {
      "analysis": {
        "tokenizer": {
          "kuromoji_search_tokenizer": {
            "type": "kuromoji_tokenizer",
            "mode": "search"
          }
        },
        "analyzer": {
          "japanese_content_search": {
            "type": "custom",
            "tokenizer": "kuromoji_search_tokenizer",
            "filter": [
              "kuromoji_baseform",
              "kuromoji_part_of_speech",
              "cjk_width",
              "lowercase",
              "stop",
              "porter_stem",
              "asciifolding",
              "word_delimiter_graph"
            ]
          },
          "japanese_word_search": {
            "type": "custom",
            "tokenizer": "kuromoji_search_tokenizer",
            "filter": [
              "kuromoji_baseform",
              "kuromoji_part_of_speech",
              "cjk_width",
              "ngram_filter",
              "lowercase",
              "stop",
              "porter_stem",
              "asciifolding",
              "word_delimiter_graph"
            ]
          }
        },
        "filter": {
          "ngram_filter": {
            "type": "ngram",
            "min_gram": 2,
            "max_gram": 3
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "content_id": {
          "type": "long"
        },
        "common_place_id": {
          "type": "long"
        },
        "first_image": {
          "type": "keyword"
        },
        "addr1": {
          "type": "keyword"
        },
        "title": {
          "type": "text",
          "analyzer": "japanese_word_search"
        },
        "overview": {
          "type": "text",
          "analyzer": "japanese_content_search"
        },
        "location": {
          "type": "geo_point"
        },
        "create_date": {
          "type": "date",
          "format": "strict_date_time"
        },
        "cat1": {
          "type": "keyword"
        },
        "cat2": {
          "type": "keyword"
        },
        "cat3": {
          "type": "keyword"
        },
        "content_type_id": {
          "type": "long"
        },
        "area_code": {
          "type": "long"
        }
      }
    }
  }
}
