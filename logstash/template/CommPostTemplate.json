{
  "index_patterns": [
    "commpost*"
  ],
  "template": {
    "settings": {
      "analysis": {
        "tokenizer": {
          "nori_mixed": {
            "type": "nori_tokenizer",
            "decompound_mode": "mixed"
          }
        },
        "analyzer": {
          "korean_mixed": {
            "type": "custom",
            "tokenizer": "nori_mixed",
            "filter": [
              "nori_part_of_speech",
              "nori_posfilter",
              "nori_readingform",
              "lowercase",
              "stop",
              "porter_stem",
              "asciifolding",
              "word_delimiter_graph"
            ]
          },
          "korean_word": {
            "type": "custom",
            "tokenizer": "nori_mixed",
            "filter": [
              "nori_part_of_speech",
              "nori_posfilter",
              "nori_readingform",
              "ngram_filter",
              "lowercase",
              "stop",
              "porter_stem",
              "asciifolding",
              "word_delimiter_graph"
            ]
          }
        },
        "filter": {
          "nori_posfilter": {
            "type": "nori_part_of_speech",
            "stoptags": [
              "E",
              "IC",
              "J",
              "MAG",
              "MAJ",
              "MM",
              "SP",
              "SSC",
              "SSO",
              "SC",
              "SE",
              "XPN",
              "XSA",
              "XSN",
              "XSV",
              "UNA",
              "NA",
              "VSV"
            ]
          },
          "ngram_filter": {
            "type": "ngram",
            "min_gram": 2,
            "max_gram": 3
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "member_id": {
          "type": "long"
        },
        "content": {
          "type": "text",
          "analyzer": "korean_mixed"
        },
        "create_date": {
          "type": "date",
          "format": "strict_date_time"
        },
        "modify_date": {
          "type": "date",
          "format": "strict_date_time"
        },
        "location": {
          "type": "geo_point"
        }
      }
    }
  }
}
