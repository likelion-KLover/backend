{
  "index_patterns": ["tourpost-chs*"],
  "template": {
    "settings": {
      "analysis": {
        "analyzer": {
          "chs_content_analyzer": {
            "type": "custom",
            "tokenizer": "ik_smart_word",
            "filter": [
              "lowercase",
              "stop",
              "porter_stem",
              "asciifolding",
              "word_delimiter_graph"
            ]
          },
          "chs_word_analyzer": {
            "type": "custom",
            "tokenizer": "ik_max_word",
            "filter": [
              "lowercase",
              "ngram_filter",
              "stop",
              "porter_stem",
              "asciifolding",
              "word_delimiter_graph"
            ]
          }
        },
        "filter": {
          "ngram_filter":{
            "type": "ngram",
            "min_gram": 2,
            "max_gram": 3
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "content_id": {
          "type": "long"
        },
        "common_place_id": {
          "type": "keyword"
        },
        "first_image":{
          "type": "keyword"
        },
        "addr1": {
          "type": "keyword"
        },
        "title": {
          "type": "text",
          "analyzer": "chs_word_analyzer"
        },
        "overview": {
          "type": "text",
          "analyzer": "chs_content_analyzer"
        },
        "location": {
          "type": "geo_point"
        },
        "create_date": {
          "type": "date",
          "format": "strict_date_time"
        }
      }
    }
  }
}
