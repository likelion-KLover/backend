{
  "index_patterns": ["tourpost_chs*"],
  "template": {
    "settings": {
      "analysis": {
        "analyzer": {
          "chs_content_analyzer": {
            "type": "custom",
            "tokenizer": "ik_smart_word",
            "filter": [
              "lowercase",
              "english_stop",
              "porter_stem",
              "asciifolding",
              "word_delimiter_graph"
            ]
          },
          "chs_word_analyzer": {
            "type": "custom",
            "tokenizer": "ik_max_word",
            "filter": [
              "lowercase",
              "nori_part_of_speech",
              "nori_posfilter",
              "nori_readingform",
              "ngram_filter",
              "lowercase",
              "english_stop",
              "porter_stem",
              "asciifolding",
              "word_delimiter_graph"
            ]
          }
        },
        "filter": {
          "english_stop": {
            "type": "stop",
            "stopwords": "_english_"
          }
        }
      },
      "index": {
        "max_ngram_diff": 5
      }
    },
    "mappings": {
      "properties": {
        "content_id": {
          "type": "keyword"
        },
        "common_place_id": {
          "type": "keyword"
        },
        "first_image":{
          "type": "keyword"
        },
        "addr1": {
          "type": "keyword"
        },
        "firstImage": {
          "type": "keyword"
        },
        "title": {
          "type": "text",
          "analyzer": "korean_word"
        },
        "location": {
          "type": "geo_point"
        }
      }
    }
  }
}
